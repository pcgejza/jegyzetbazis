{% if err is not defined %}
{% if app.user is not null %}
<span class="upload-icon uploadFiles"></span>
{% endif %}
<div class='actualsubject'>
    <h3>Tantárgyak/</h3><span class='actualSubjectName'></span>
</div>
<div class="subjects">
    <div class="subjectsTitle">Tantárgyak</div>
    <div class="subjectsContent">
       {% if Subjects | length > 0 %}
       {% for s in Subjects %}
        <script>UploadWindow.allSubject.push({
                    id : '{{s.getId()}}',
                    name : '{{s.getName()}}'
                });
          </script>
         {{ include('FrontendSubjectBundle:Default:oneSubject.html.twig',{'name' : s.getName(), 'path' : s.getSlug()} )}}
       {% endfor %}
       {% else %}
          Nincsenek aktív tantárgyak
       {% endif %}
    </div>
</div>
{% else %}
    Hiba a tantárgyak lekérdezésekor: {{err}}
{% endif %}