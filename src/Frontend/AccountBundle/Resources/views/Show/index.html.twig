{% extends "FrontendLayoutBundle:Default:layout.html.twig" %}


{% block title %}Felhasználó adatainak megtekintése{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('bundles/frontendlayout/css/universal-tabs.css')}}">
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{asset('bundles/frontendlayout/js/UniversalTabs.js')}}"></script>
{% endblock %}

{% block initJavascripts %}
    {{parent()}}
    var tabs1 = UniversalTabs.init();
    tabs1.setTabHolderWidth('80%');
    tabs1.setTabElementWidth('25%');
{% endblock %}

{% block bodyClass %}show{% endblock %}


{% block body %}
{{parent()}}
{% endblock %}
{% block contentHolder %}
    {% if err is not defined %}
        {% include 'FrontendAccountBundle:Show:show.html.twig' %}
    {% else %}
        Hiba : {{err}}
        <br>
        {% if errCode != -1 %}
            
        {% endif %}
    {% endif %}
{% endblock %}