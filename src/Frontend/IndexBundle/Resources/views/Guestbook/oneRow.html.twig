<div class="comment">
    <div class="image">
        <a href="">
        {% if name.userSettings is not null and name.userSettings.getAvatar() is not null %}
            <img src="{{image(user.userSettings.getAvatar().getWebPath()).zoomCrop(100,100).jpeg}}" alt="avatar">
        {% else %}
            {% if user.userSettings.gender == 'male' or user.userSettings.gender is null %}
                <img src="{{asset('images/default_profile_image_male.png')}}" alt="avatar">
            {% else %}
                <img src="{{asset('images/default_profile_image_female.png')}}" alt="avatar">
            {% endif %}
        {% endif %}
        </a>
    </div>
    <div class="bubbleHolder">
        <div class="bubble">
           {{text}} 
        </div>
    </div>
    
    
    {#
    <span class="name">
        {% if name.userSettings is not null %}
            {{name.userSettings.name}}
        {% else %}
            {{name.userName}}   
        {% endif %}
    </span>
    <span class="date">
        {{date|date('Y-m-d g:i')}}
    </span>
    <span class="text">
        {{text}}
    </span>
    #}
</div>