<div class="messages">
    <div class="messagesMenu">{{getPage}}
        <ul>
            <li{% if page == 'new' %} class="active"{% endif %}>
                <a href="javascript:void(0)" page="newMessage">Új üzenet írása</a>
            </li>
            <li{% if page == 'received' %} class="active"{% endif %}>
                <a href="{{path('messaging_homepage_page', {page : 'beerkezett-uzenetek'})}}" getp="received" page="receivedMessages">Beérkezett üzenetek</a>
            </li>
            <li{% if page == 'sent' %} class="active"{% endif %}>
                <a href="{{path('messaging_homepage_page', {page : 'elkuldott-uzenetek'})}}" getp="sent" page="sentMessages">Elküldött üzenetek</a>
            </li>
            <li{% if page == 'deleted' %} class="active"{% endif %}>
                <a href="{{path('messaging_homepage_page', {page : 'torolt-uzenetek'})}}" getp="deleted" page="deletedMessages">Törölt üzenetek</a>
            </li>
        </ul>
    </div>
    <div class="messagesList">
        <div class="p newMessage{% if page == 'new' %} active{% endif %}">
            <h3>Új üzenet írása</h3>
           <form method="POST" action="{{path('send_message')}}" class="newMessageForm">
            <label for="nick">Nicknév vagy email cím</label>
            <input type="text" name="nick" class="nick">
            <label for="nick">Üzenet</label>
            <textarea name="message" class="message"></textarea>
            <input type="submit" value="Küldés">
            <div class="loading-mini hide"></div>
            <input type="reset" class="hide">
           </form>
            <div class="errors"></div>
        </div>
        <div class="p receivedMessages{% if page == 'received' %} active{% endif %}">
            {% if page == 'received' %}
                {% render(controller('FrontendMessagingBundle:Default:getPage', {page : page})) %}
            {% endif %}
        </div>
        <div class="p sentMessages{% if page == 'sent' %} active{% endif %}">
            {% if page == 'sent' %}
                {% render(controller('FrontendMessagingBundle:Default:getPage', {page : page})) %}
            {% endif %}
        </div>
        <div class="p deletedMessages{% if page == 'deleted' %} active{% endif %}">
            {% if page == 'deleted' %}
                {% render(controller('FrontendMessagingBundle:Default:getPage', {page : page})) %}
            {% endif %}
        </div>
        <div class="p singleMessage{% if page == 'single' %} active{% endif %}">
            {% if page == 'single' %}
                {% render(controller('FrontendMessagingBundle:Default:getPage', {page : page, messageId : messageId})) %}
            {% endif %}
        </div>
    </div>
</div>