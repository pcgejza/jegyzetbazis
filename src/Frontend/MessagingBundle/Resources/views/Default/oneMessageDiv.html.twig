  <div class="message{% if page != 'sent' and Message.getSeeTime() is null %} new-message{% endif %}" messageid="{{Message.getId()}}" url="{{path('messaging_homepage_page_single', {page : 'uzenet',messageId : Message.getId() })}}">
      {% set count = 0 %}
      {% if Message.getParent() is not null %}
          {% set count = Message.getParent().getChildren()|length %}
      {% endif %}
      <span class="name">
          {% if page == 'sent' %}
              <a href="#">{{Message.getUserB().getUserSettings().getName()}}</a>
          {% else %}
              <a href="#">{{Message.getUserA().getUserSettings().getName()}}</a>
          {% endif %}
          {% if count>0 %}
              ({{count}})
          {% endif %}
      </span>
      <span class="smallText">
          {{Message.getText()|slice(0,20) ~ '...'}}
      </span>
      <span class="date">
          {{Message.getSendDate() | date('Y-m-d H:s')}}
      </span>
  </div>